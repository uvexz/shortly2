# Turso / LibSQL Database
# For local dev: TURSO_DATABASE_URL=file:local.db (no token needed)
# For Turso cloud: TURSO_DATABASE_URL=libsql://your-db.turso.io
TURSO_DATABASE_URL=file:local.db
TURSO_AUTH_TOKEN=

# Better Auth
BETTER_AUTH_SECRET=change-this-to-a-random-secret-at-least-32-chars
BETTER_AUTH_URL=http://localhost:3000

# GitHub OAuth (optional — leave blank to disable GitHub login)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Resend (optional — leave blank to disable email OTP login)
RESEND_API_KEY=
RESEND_FROM_EMAIL=shortly@example.com

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
